<div id="body-container" >
  <div class="form-color">
    <div class="container-fluid">
      <div class="col-xs-12 col-md-6 col-md-offset-3 text-center form-box" >
          <h3 class="title-illustration">NOUS CONTACTER</h3>

          <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
            <div class="col-xs-12 col-sm-6 col-sm-offset-3" >
              <%= f.input :name, :required => true, label:"Nom & PrÃ©nom" %>
            </div>
            <div class="col-xs-12 col-sm-6 col-sm-offset-3" >
              <%= f.input :email, :required => true %>
            </div>
            <div class="col-xs-12 col-sm-12" >
              <%= f.input :message, :as => :text, :required => true %>
            </div>
            <div class= "hidden">
              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
            </div>
            <div class="col-xs-12 col-sm-6 col-sm-offset-3" >
              </br>
              <%= f.button :submit, 'Envoyer', :class=> "btn btn-primary btn-margin" %>
            </div>
          <% end %>

      </div>
    </div>
  </div>
</div>
