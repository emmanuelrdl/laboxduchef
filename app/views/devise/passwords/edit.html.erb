<div id="body-container" >
  <div class="form-color">
    <div class="container-fluid">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center form-box" style="margin-bottom:200px;">
          <h3 class="form-header">MODIFICATION MOT DE PASSE</h3>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

              <%= f.input :reset_password_token, as: :hidden %>
              <%= f.full_error :reset_password_token %>

              <div class="form-inputs">
                <%= f.input :password, label: false, placeholder:"Nouveau mot de passe", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class:"form-input-text"} %>
                <%= f.input :password_confirmation, label:false, placeholder:"Confirmation mot de passe" ,required: true, input_html: {class:"form-input-text"} %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Valider", class: "btn btn-validation btn-waiting"  %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
