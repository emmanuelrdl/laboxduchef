<div id="body-container"  >
    <div class="form-color">
    <div class="container-fluid">

    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center form-box" style="margin-bottom: 100px;margin-top: 50px">

    <h3 class="form-header" >CONNEXION</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs ">
        <%= f.input :email, required: false, autofocus: true, input_html: {class:"form-input-text"}, label:false, placeholder:"Email" %>
        <%= f.input :password, required: false, input_html: {class:"form-input-text "} , label:false, placeholder: "Mot de passe" %>
        <%= f.input :remember_me, label:"Mémoriser le mot de passe", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <%= link_to "Mot de passe oublié", new_user_password_path %>
      <div class="form-actions">
        <%= f.button :submit, "Connexion", class: "btn btn-validation"%>
      </div>

    <% end %>
    </div>


    </div>
    </div>
</div>
