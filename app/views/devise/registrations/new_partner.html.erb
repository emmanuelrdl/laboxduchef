<div id="body-container" >
  <div class="form-color">
    <div class="container-fluid">

      <div class="col-xs-12 col-md-6 col-md-offset-3 text-center form-box" >

      <h2>Créer un compte</h2>
      <%= simple_form_for(User.new, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :last_name, label: "Nom", required: true, autofocus: true %>
          <%= f.input :first_name, label: "Prenom", required: true, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :phone_number, label: "Téléphone", required: true, autofocus: true %>
          <%= f.input :restaurant_owner, :as => :hidden, input_html: { :value => true } %>
          <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirmation du mot de passe", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Validez", class: "btn btn-success margin-btn-validation" %>
        </div>
      <% end %>


        </div>
    </div>
  </div>
</div>
