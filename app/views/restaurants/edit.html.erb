<div id="body-container" >
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3 text-center form-box" >

  <h2>Mettre à jour votre fiche restaurant</h2>

        <%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name, label: 'Nom du restaurant:', placeholder: 'La belle marmite'%>
          <%= f.input :phone_number, label: 'Numéro de téléphone:',input_html: {:maxlength => 10}, placeholder: '0142505310' %>
          <%= f.input :picture, label: 'Photo du restaurant' %>

          <label for="">
            Entrez votre addresse:
          </label>
          <%= text_field_tag :full_addressuser_input_autocomplete_address, '', id:"user_input_autocomplete_address", class:"form-control"   %>
          <div style="margin-bottom:10px;"></div>

          <%= f.input :street, label: "Numéro de votre rue", input_html: { id: "street" } %>
          <%= f.input :postal_code , label: "Code postal", hidden: true, input_html: {id: "postal_code"} %>
          <%= f.input :locality, label: "Ville", hidden: true, input_html: {id: "locality"} %>

          <%= f.input :iban, label: "IBAN de l'étalissement" %>
          <%= f.button :submit, "Valider", class: "btn btn-success" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
