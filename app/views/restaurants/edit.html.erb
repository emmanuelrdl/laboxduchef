<div id="body-container"  >
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3 text-center form-box" >
        <h3 class="form-header">ÉDITER LA FICHE RESTAURANT</h3>
        <%= simple_form_for @restaurant do |f| %>

          <%= f.input :name, label: false, placeholder: 'Nom',  input_html: { class:"form-input-text"}%>
          <%= f.input :phone_number, label: false,input_html: {:maxlength => 10, class:"form-input-text"}, placeholder: 'Téléphone' %>
          <div class="form-input-picture">
            <p class="label-picture">Photo</p>
            <%= f.input :picture, label: false  %>
          </div>
          <%= text_field_tag :full_addressuser_input_autocomplete_address, '', id:"user_input_autocomplete_address", class:"form-control form-input-text", label:false, placeholder:"Adresse du restaurant" %>
          <%= f.input :street, :as => :hidden, label: "Numéro de votre rue", input_html: { id: "street" } %>
          <%= f.input :postal_code, :as => :hidden, label: "Code postal", input_html: {id: "postal_code"} %>
          <%= f.input :locality, :as => :hidden, label: "Ville", input_html: {id: "locality"} %>

          <%= render partial:'restaurants/edit_timeselection',  locals: {f: f} %>


          <%= f.input :iban, label:false, placeholder:"Iban",  input_html: { class:"form-input-text"} %>


          <%= f.button :submit, "Valider", class: "btn btn-validation" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>





