<div id="body-container">
    <div class="row">

                <div class="col-xs-12">
                  <h4 class="text-center title-illustration">DERNIÈRES COMMANDES</h4>

                    <div class="table-responsive">
                      <table class="table table-hover" >
                        <thead>
                           <tr>
                            <th>Date</th>
                            <th>Numéro</th>
                            <th>Prix total</th>
                            <th>Commission HT</th>
                            <th>TVA déductible</th>
                            <th>A percevoir</th>
                            <th>Statut</th>
                          </tr>
                        </thead>
                          <% @meals.each do |meal| %>
                            <% meal.order_meals.each do |order_meal| %>
                             <% if order_meal.order.status == "confirmed" || order_meal.order.status == "paid"  %>

                              <tbody>
                              <tr>
                                <td><%= order_meal.order.created_at.strftime("%d/%m/%y") %></td>
                                <td><%= order_meal.order.id %></td>
                                <td><%= number_to_currency(order_meal.order.amount, :unit => "€") %></td>
                                <td><%= number_to_currency(order_meal.quantity*1) %></td>
                                  <td><%= number_to_currency(order_meal.quantity*1*0.2) %>
                                 </td>
                                <td><%= number_to_currency(order_meal.order.amount.to_i - 1*1.2*order_meal.quantity) %></td>
                                <td><%= order_meal.order.status %></td>
                              </tr>
                            </tbody>

                            <% else %>
                            <% end -%>

                            <% end -%>
                          <% end -%>
                        </ul>
                      </table>
                    </div>

                  </div>

        </div>

          <%= paginate @meals %>
  </div>

