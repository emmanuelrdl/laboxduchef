 <div class="payment_show_infos_box_postion ">
     <% if @last_order.meal.take_away_noon? && @last_order.meal.take_away_evening? %>
         <i class="fa fa-clock-o"></i>
         <p class="payment_show_take_away_time"> <%= @last_order.meal.restaurant.take_away_noon_starts_at.strftime('%H:%M') %> - <%= @last_order.meal.restaurant.take_away_noon_ends_at.strftime('%H:%M') %> </p>
        <p class="payment_show_take_away_time">
          <%= @last_order.meal.restaurant.take_away_evening_starts_at.strftime('%H:%M') %> - <%= @last_order.meal.restaurant.take_away_evening_ends_at.strftime('%H:%M') %>
        </p>
    <% elsif @last_order.meal.take_away_noon? %>
        <i class="fa fa-clock-o"></i>
        <p class="payment_show_take_away_time"> <%= @last_order.meal.restaurant.take_away_noon_starts_at.strftime('%H:%M') %> - <%= @last_order.meal.restaurant.take_away_noon_ends_at.strftime('%H:%M') %>
        </p>
    <% elsif @last_order.meal.take_away_evening? %>
        <i class="fa fa-clock-o"></i>
        <p class="payment_show_take_away_time"><%= @last_order.meal.restaurant.take_away_evening_starts_at.strftime('%H:%M') %> - <%= @last_order.meal.restaurant.take_away_evening_ends_at.strftime('%H:%M') %>
        </p>
      <% end %>
</div>
