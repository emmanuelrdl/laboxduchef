
  <div class="container card-address" >
    <div class="row text-center">
      <div class="col-xs-12">
        <div class="visible-xs hidden-sm hidden-md hidden-lg"><h4>Votre dernière commande</h4></div>

   <% if current_user.orders.where(status:"confirmed").count >= 1 %>
      <div class="hidden-xs"><h2>Détails de votre dernière commande</h2></div>
      </div>
        </div>
          <div>


            <div class="row paid-card" style="margin-bottom:15px">
                <div class="col-xs-12 col-md-6 text-center">
                    <h3><%= @last_order.meal.name %></h3>
                    <div><%= image_tag @last_order.meal.picture.url(:thumb) %></div>
                    <p><strong><%= @last_order.meal.restaurant.name %></strong></p>
                    <p><i class="fa fa-phone"></i> <%= @last_order.meal.restaurant.phone_number %></p>
                    <p><i class="fa fa-map-marker"></i> <%= @last_order.meal.restaurant.street %>
                      <%= @last_order.meal.restaurant.postal_code %>
                      <%= @last_order.meal.restaurant.locality %></p>
                    <p><strong><i class="fa fa-clock-o"></i> Horaires de retrait</strong></p>
                    <% if @last_order.meal.take_away_noon? && @last_order.meal.take_away_evening? %>
                        <p>En journée: <%= @last_order.meal.restaurant.take_away_noon_starts_at.strftime('%H:%M') %> <%= @last_order.meal.restaurant.take_away_noon_ends_at.strftime('%H:%M') %> - En soirée:
                          <%= @last_order.meal.restaurant.take_away_evening_starts_at.strftime('%H:%M') %> <%= @last_order.meal.restaurant.take_away_evening_ends_at.strftime('%H:%M') %>
                        </p>
                    <% elsif @last_order.meal.take_away_evening? %>
                         <p>En soirée:
                          <%= @last_order.meal.restaurant.take_away_evening_starts_at.strftime('%H:%M') %> <%= @last_order.meal.restaurant.take_away_evening_ends_at.strftime('%H:%M') %>
                         </p>
                    <% elsif @last_order.meal.take_away_noon? %>
                         <p>En journée: <%= @last_order.meal.restaurant.take_away_noon_starts_at.strftime('%H:%M') %> <%= @last_order.meal.restaurant.take_away_noon_ends_at.strftime('%H:%M') %>
                        </p>
                  <% end %>
                </div>
                <div class="col-xs-12 col-sm-6">
                  <h4>Itinéraire <i class="fa fa-map-marker"></i></h4>
                  <div id="map-<%= @last_order.id %>" style="width:100%;height:300px;border-radius:3px" class="border-box-shadow" ></div>
                </div>
              </div>


            <div class="spacer hidden-xs"></div>

                <% content_for(:after_js) do %>
                  <%= javascript_tag do %>
                    $(document).on('ready', function() {

                        handler<%= @last_order.id %> = Gmaps.build('Google');
                        handler<%= @last_order.id %>.buildMap({
                        provider: { maxZoom: 15},
                        internal: { id: 'map-<%= @last_order.id %>' } }, function(){
                          markers = handler<%= @last_order.id %>.addMarkers(<%= raw [{ lat: @last_order.meal.restaurant.latitude, lng: @last_order.meal.restaurant.longitude }].to_json %>);
                          handler<%= @last_order.id %>.bounds.extendWith(markers);
                          handler<%= @last_order.id %>.fitMapToBounds();
                        });

                    })
                  <% end %>
                <% end %>
            </div>
          </div>

        <% else %>

        <div id="body-container" style="height:500px;">
          <h4> Vous n'avez pas de commandes en cours</h4>
        </div>
        <% end -%>




