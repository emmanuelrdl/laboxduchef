                      <h4 class="sub_title_partner_joins_us">ATTIREZ UNE NOUVELE CLIENTÈLE </h4>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                       <%= image_tag "make_money.svg", size:"50x50"  %>
                      <h4 class="sub_title_partner_joins_us">VALORISEZ VOS INVENDUS </h4>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                       <%= image_tag "no_waste.svg", size:"50x50"  %>
                      <h4 class="sub_title_partner_joins_us"> LUTTEZ CONTRE LE GASPILLAGE  </h4>
                    </div>
                     <div class="col-xs-12 col-sm-4 col-sm-offset-4">
                <%= link_to "Je deviens partenaire", partner_sign_up_path, class:" btn btn-join-us-responsive"   %>
